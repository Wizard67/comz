{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationDir": "types",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "defines",
    "src",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}